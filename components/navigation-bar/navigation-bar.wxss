@import "../../style/iconfont.wxss";

.nav-bar {
  position: fixed;
  z-index: 1;
  width: 100%;
  top: 0;
  color: #fff;
}

.nav-bar .title {
  position: absolute;
  width: 100%;

  color: #fff;
  font-size: 36rpx;
  text-align: center;
}
.nav-bar .back {
  position: absolute;
  z-index: 2;
}

.nav-bar .back .iconfont {
  font-size: 36rpx;
  padding: 0 50rpx 0 0;
}

.stat {
  position: absolute;
  z-index: 2;

  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8rpx;

  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
}