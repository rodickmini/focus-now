/* pages/index/index.wxss */

@keyframes Breath {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
}

.container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  background-color: #71B49C;
  color: #FFFFFFCC;
  overflow: hidden;
}

.navbar {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  font-size: 32rpx;
  font-weight: bold;
}

.center-box {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;


  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.center-box .state {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);

  margin-bottom: 20rpx;
  animation: Breath 5s linear infinite;
}

.center-box .counter {
  box-sizing: border-box;
  width: 356rpx;
  height: 356rpx;
  border-radius: 100%;

  /* PanelBg */

  background: rgba(255, 255, 255, 0.08);
  border: 34rpx solid rgba(255, 255, 255, 0.35);

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  font-family: 'Arial';
  font-style: normal;
  font-weight: 700;
  font-size: 80rpx;
}